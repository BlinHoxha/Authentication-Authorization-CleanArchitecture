@model DDD.Contracts.DTO.Authenticate.Incoming.UserLoginRequestDTO
@{
    ViewBag.Title = "Login";

}

<h2>Login</h2>


<div>
    @using (Html.BeginForm("Login", "Home"))
    {
        <div style="color:red;">@Html.ValidationSummary()</div>
        <div class="row">
            <!--Show details are saved successfully message-->
            <div class="col-lg-12">@ViewBag.Message</div>
        </div>

        <br />

        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.UserName)</div>
            <div class="col-lg-10">@Html.TextBoxFor(a => a.UserName, new { @class = "form-control" })</div>
        </div>

        <br />

        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.Email)</div>
            <div class="col-lg-10">@Html.TextBoxFor(a => a.Email, new { @class = "form-control" })</div>
        </div>

        <br />
        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.Password)</div>
            <div class="col-lg-10">@Html.TextBoxFor(a => a.Password, new { @class = "form-control", type="Password" })</div>
        </div>

        <br />
        <input type="submit" value="Login" class="btn btn-primary" />
        <a class="text-alert" href="/Home/Registration">Not a user? Signup</a>

    }

</div>
