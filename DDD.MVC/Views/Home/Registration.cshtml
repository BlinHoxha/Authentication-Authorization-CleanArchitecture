@using DDD.Contracts.DTO.Authenticate.Incoming;
@model UserRegistrationRequestDTO
@{
    ViewBag.Title = "Registration";
}


@*@Html.DropDownList("UserRole",
                    new SelectList(Enum.GetValues(typeof())),
                    "Select Role",
                    new { @class = "form-control" })*@

<h2>Registration</h2>


<div>
    @using (Html.BeginForm("Registration", "Home"))
    {
        <div style="color:red;">@Html.ValidationSummary()</div>
        <div class="row">
            <!--Show details are saved successfully message-->
            <div class="col-lg-12">@ViewBag.Message</div>
        </div>

        <br />
        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.UserName)</div>
            <div class="col-lg-10">@Html.TextBoxFor(a => a.UserName, new { @class = "form-control" })</div>
        </div>
        <br />


        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.FirstName)</div>
            <div class="col-lg-10">@Html.TextBoxFor(a => a.FirstName, new { @class = "form-control" })</div>
        </div>

        <br />
        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.LastName)</div>
            <div class="col-lg-10">@Html.TextBoxFor(a => a.LastName, new { @class = "form-control" })</div>
        </div>

        <br />
        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.Email)</div>
            <div class="col-lg-10">@Html.TextBoxFor(a => a.Email, new { @class = "form-control" })</div>
        </div>

        <br />
        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.Password)</div>
            <div class="col-lg-10">@Html.TextBoxFor(a => a.Password, new { @class = "form-control", type = "Password" })</div>
        </div>

        <br />
        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.Country)</div>
            <div class="col-lg-10">@Html.TextBoxFor(a => a.Country, new { @class = "form-control" })</div>
        </div>

        <br />
        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.PhoneNumber)</div>
            <div class="col-lg-10">@Html.TextBoxFor(a => a.PhoneNumber, new { @class = "form-control" })</div>
        </div>

        @*<br />
        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.DateOfBirth)</div>
            <div class="col-lg-10">
                @Html.TextBoxFor(model => model.DateOfBirth,
            new { @type = "date", @Value = Model.DateOfBirth.ToString("yyyy-MM-dd") })
            </div>
        </div>*@

        <br />
        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.Role)</div>
            <div class="col-lg-10">
                <select asp-for="Role" class="form-control" id="StudentGender" name="StudentGender">
                    <option value="0">Admin</option>
                    <option value="1">User</option>
                    <option value="2">HR</option>
                    <option value="3">Manager</option>
                </select>
            </div>
        </div>

        
        <br />
        <input type="submit" value="Register" class="btn btn-primary" href="/Home/Login" />

    }

</div>